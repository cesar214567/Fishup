<div class="mb-3">
  <div class="horizontal-scroll">
    <div class="list">
      <% array.each do |element| %>
        <div class="card-trip inline">
            <%= image_tag "https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/#{element.longitude},#{element.latitude},14.25,0,60/600x600?access_token=#{ENV['MAPBOX_API_KEY']}" %>
          <div class="card-trip-infos ">
            <div class="text-center">
                <h2><%= element.name %></h2>
                <p><%= element.description %></p>
            </div>
          </div>

        </div>
      <% end %>
    </ul>
  </div>
</div>
