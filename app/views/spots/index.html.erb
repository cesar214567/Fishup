<h1>Spots</h1>


<div class="container filtros">
  <div class="" ><h6>Type of water</h6></div>
  <div class="" ><h6>Captures</h6></div>
  <div class="" ><h6>Baits</h6></div>
  <div class="" ><h6>Rating</h6></div>
</div>




<div class="container">
  <div class="">
    <% @spots.each do |spot|%>
    <div class="card-spot">
      <div class="col-4">
        <%= cl_image_tag spot.images.first.key, class: "ml-0", style:"height: 160px; width:130px" %>
      </div>

      <div>
      <div class="card-spot-name">
        <%= spot.name.capitalize%>
      </div>

          <p><%= spot.latitude %>, <%= spot.longitude%></p>
          <i class="far fa-heart"></i>

          <div class="">
            <%=link_to "Check more information", spot_path(spot), style:"background-color: #FCAF3F;color: white;padding: 5px;border-radius: 10px;" %>
          </div>
      </div>
    </div>
    <%end %>
  </div>
 </div>


<div
  id="map-spot" class="mb-4"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
