
<div class="container filtros">
  <%= render "shared/search_bar", path: spots_path %>
  <div class="filtro" ><%=link_to "#" do %><h6>Type of water</h6><%end%></div>
  <div class="filtro" ><%=link_to "#" do %><h6>catches</h6><%end%></div>
  <div class="filtro" ><%=link_to baits_path do %><h6>Baits</h6><%end%></div>
  <div class="filtro" ><%=link_to "#" do %><h6>Rating</h6><%end%></div>
  <div class="filtro" ><h6><%=link_to "create new Spot", new_spot_path %></h6></div>
</div>
<%#div padre %>
<%#div padre %> style
<div clas"create new Spot", new_spot_paths=" spot:20px;">


  <div class="d-flex vh-100">

  <div class="flex-grow-1 mx-3">
    <% @spots.each do |spot|%>
    <div class="card-spot">
      <div class="col-4">
        <%= cl_image_tag spot.images.first.key, width: 200, height: 150, crop: :fit, class: "ml-0", style:"height: 160px; width:130px" %>
      </div>
      <div>
        <div class="card-spot-name">
          <%= spot.name.capitalize%>
        </div>
        <div class="card-spot-location">
          <% result =  spot.loc.nil? ? nil : spot.loc.split(",") %>
          <strong><%= result[-1] unless result.nil? %>,
          <%= result[-3] unless result.nil? %></strong></p>
        </div>
        <div>
          <i class="far fa-heart" style="position: relative; right: -408px; top: -88px;"></i>
        </div>
          <div class="position: relative; left: -52px; top: -12px; font-size: 15px;">
            <%=link_to "Check more information", spot_path(spot), style:"background-color: #FCAF3F;color: white;padding: 5px;border-radius: 10px;" %>
          </div>
      </div>
    </div>
    <%end %>
  </div>

  <%# div del mapa  %>
  <div class="col-5">
    <div
      id="map-spot" class="map-spot"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
</div>
