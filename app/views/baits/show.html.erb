
<div class="banner-bait color-brown" >
  <div class="container">
    <div class="row">
      <div class="col-6">
        <h1><strong><%=  @bait.name.capitalize %></strong></h1>
        <%= cl_image_tag @bait.image.key, width: 200, height: 150, crop: :fit, class: "ml-0" %>
      </div>
      <div class="col-6 mt-5 text-white">
        <div>
          <h2 class>Description</h2>
          <hr>
          <p> <%= @bait.description %></p></a>
        </div>
        <div>
          <h2 class>cost</h2>
          <hr>
          <p> <%= @bait.cost %></p></a>
        </div>

      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class>
    <h2 class="mt-3">Possible Catches</h2>
    <hr>
      <%= render 'shared/vertical_scrollbar' , :array => @bait.catches, :vh => "vh-40" %>
  </div>
  <div>
    <h2 class="mb-3">Spots</h2>
    <hr>
      <%= render 'shared/horizontal_scrollbar' , :array => Spot.from_bait_id(@bait.id) %>
  </div>
</div>
