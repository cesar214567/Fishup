
<div class="banner-bait color-brown" >
  <div class="container">
    <div class="row">
      <div class="col">
        <h1><strong><%=  @post.title.capitalize %></strong></h1>
        <%= cl_image_tag @post.image.key, width: 200, height: 150, crop: :fit, class: "ml-0" %>
      </div>
      <div class="col mt-5 text-white">
        <div>
          <h2 class>Body</h2>
          <hr>
          <p> <%= @post.body %></p></a>
        </div>
        <div>
          <h2>Uploaded at</h2>
          <hr>
          <p> <%= @post.created_at.strftime("%d de %b de %Y") %></p></a>
        </div>

      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class>
    <h2 class="mt-3">Catch</h2>
    <hr>
    <%= render "shared/catches_card", catch: @post.catch,verifiable: false %>
  </div>
  <div>
    <h2 class="mb-3">Spot</h2>
    <hr>
    <div class="d-flex justify-content-center">
      <%= render "shared/spots_card", spot: @post.spot %>

    </div>

  </div>
</div>
